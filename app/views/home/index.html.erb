<div class="jumbotron text-center">
  <h1>Customer Support
  <p>
    One stop for all your queries and issues!!
  </p></h1>
  <br/><br/>
  <div class="row">
    <% if user_signed_in? %>
      <h3>Hi, <%= current_user.first_name %>.</h3>
      <br/>
      <% unless current_user.is_a?(Admin) %>
        <h4>You have <%= @unresolved_tickets_count %> unresolved & <%= @resolved_tickets_count %> resolved <%= link_to "Tickets", tickets_path %>.</h4>
      <% else %>
        <h4>Welcome! Oh Great One. Check some <%= link_to "Tickets", tickets_path %></h4>
      <% end %>
      <h4><%= link_to "Create", new_ticket_path %> a new Ticket.</h4>
    <% else %>
      <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-4 col-md-offset-4">
        <h3>
          To log a Ticket:
        </h3>
        <br />
        <%= link_to("Sign In", "users/sign_in" , class: "btn btn-success btn-lg btn-block") %>
        <h3>OR</h3>
        <%= link_to("Sign Up", "users/sign_up" , class: "btn btn-danger btn-lg btn-block") %>
      </div>
    <% end %>
  </div>
</div>