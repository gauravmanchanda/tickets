<p id="notice"><%= notice %></p>

<h3>Your Tickets</h3>
  <% @tickets.each do |ticket| %>
    <div class="list-group">
      <a href="<%= ticket_path(ticket) %>" class="list-group-item">
        <h4 class="list-group-item-heading"><%= ticket.title %></h4>
        <p class="list-group-item-text"><%= ticket.description %></p>
        <p class="list-group-item-text">
          <span class="label label-warning">
            <%= ticket.aasm_state.capitalize %>
          </span>
        </p>
      </a>
    </div>
  <% end %>
<br>

<%= link_to 'New Ticket', new_ticket_path, class: "btn btn-info" %>
<%= link_to 'Download Resolved Report', resolved_report_tickets_path(format: :pdf), class: "btn btn-info" if current_user.is_a?(Admin) %>
