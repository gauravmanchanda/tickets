<%= form_for(ticket) do |f| %>
  <div class="form-vertical form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "Title", required: true %>
    </div>
  </div>

  <div class="form-vertical form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= f.text_area :description, class: "form-control", placeholder: "Description", rows: 10, required: true %>
    </div>
  </div>

  <%= render 'conditional_form_fields', f: f %>

  <div class="form-vertical form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-4 col-md-offset-4">
      <%= f.submit "Submit", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
<% end %>
